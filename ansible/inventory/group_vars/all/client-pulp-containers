# List of container image repositories.
client_pulp_repository_container_repos: >-
  {%- set repos = [] -%}
  {%- for image in client_pulp_images -%}
  {%- set image_repo = "kolla/centos-source-" ~ image -%}
  {%- set repo = {"name": image_repo, "url": client_release_pulp_registry_url, "policy": "on_demand", "state": "present"} -%}
  {%- set _ = repos.append(repo) -%}
  {%- endfor -%}
  {{ repos }}

# List of container image distributions.
client_pulp_distribution_container: >-
  {%- set distributions = [] -%}
  {%- for image in client_pulp_images -%}
  {%- set image_repo = "kolla/centos-source-" ~ image -%}
  {%- set distribution = {"name": image_repo, "repository": image_repo, "base_path": image_repo, "state": "present"} -%}
  {%- set _ = distributions.append(distribution) -%}
  {%- endfor -%}
  {{ distributions }}
