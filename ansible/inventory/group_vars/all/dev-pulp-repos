  {{ dev_dists }}

###############################################################################
# x509 cert guards

dev_pulp_content_guard_x509_cert_guards:
  - name: release
    description: "Content-guard for released distributions"
    state: present
  - name: development
    description: "Content-guard for development distributions"
    state: present

###############################################################################
# RBAC content guards

dev_pulp_content_guard_rbac:
  - name: release-rbac
    description: "RBAC content-guard for released distributions"
    state: present
  - name: development-rbac
    description: "RBAC content-guard for development distributions"
    state: present
