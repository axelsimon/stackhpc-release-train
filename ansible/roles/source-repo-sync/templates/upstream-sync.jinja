---
name: Upstream Sync
'on':
  schedule:
    - cron: "15 8 * * 1"
  workflow_dispatch:
permissions:
  contents: write
  pull-requests: write
jobs:
{% for release in repository_manifest.releases %}
  synchronise-{{ release }}:
    name: Synchronise {{release}}
    uses: stackhpc/.github/.github/workflows/upstream-sync.yml@main
    with:
      release_series: {{ release }}
{% endfor %}
